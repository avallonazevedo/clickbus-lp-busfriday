{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "strict": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "isolatedModules": true,
        "target": "ES2015",
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "outDir": "./dist",
        "noUnusedParameters": true,
        "lib": ["DOM", "ESNext"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}